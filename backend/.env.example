# Sample environment configuration for STT Server
# Copy to .env and customize

# Application
APP_NAME=STT Server
DEBUG=false

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://stt:stt_password@postgres:5432/stt

# Redis (for Celery broker and cache)
REDIS_URL=redis://redis:6379/0

# File Storage Paths (inside container)
UPLOAD_DIR=/app/uploads
OUTPUT_DIR=/app/outputs
MODEL_DIR=/app/models

# Maximum file upload size in MB
MAX_UPLOAD_SIZE_MB=500

# CORS Origins (comma-separated)
# Add your frontend URL here
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Default STT Settings
DEFAULT_WHISPER_MODEL=large-v3
DEFAULT_LANGUAGE=auto

# HuggingFace Token (required for pyannote diarization)
# Get from: https://huggingface.co/settings/tokens
# Must accept model terms: https://huggingface.co/pyannote/speaker-diarization-3.1
HF_TOKEN=

# Compute Device
# Options: cuda, cpu, auto
DEVICE=cuda

# Compute Type (for faster-whisper)
# Options: float16 (GPU), int8 (CPU/GPU), float32 (CPU)
COMPUTE_TYPE=float16
